@model AM.Web.Models.UserModel
@using AM.Web.Shared
<form id="add-bank-info-form">
    <div class="modal-body">
        <input class="form-control" value="@Model.Id" name="Id" id="Id" type="hidden">
        <input class="form-control" value="@Model.Active" name="Active" id="Active" type="hidden">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>First Name<span class="text-danger">*</span></label>
                    <input onkeyup="checkValidation(this)" class="form-control" name="FirstName" id="FirstName" value="@Model.FirstName" placeholder="First Name" type="text">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Last Name<span class="text-danger">*</span></label>
                    <input onkeyup="checkValidation(this)" class="form-control" value="@Model.LastName" id="LastName" name="LastName" placeholder="Last Name" type="text">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Email<span class="text-danger">*</span></label>
                    <input class="form-control" id="Email" value="@Model.Email" name="IFSC" placeholder="Email" type="text">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">
            @(Model.Id.IsNotNullOrEmpty()?"Update":"Save")
        </button>
    </div>
</form>