@model AM.Web.Models.UserModel
@using AM.Web.Shared
<form id="user-form">
    <div class="modal-body">
        <input class="form-control" value="@Model.Id" name="Id" id="Id" type="hidden">
        <input class="form-control" value="@Model.Active" name="Active" id="Active" type="hidden">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>First Name<small class="text-danger">*</small></label>
                    <input class="form-control" required name="FirstName" id="FirstName" value="@Model.FirstName" placeholder="First Name" type="text">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Last Name<small class="text-danger">*</small></label>
                    <input class="form-control" required value="@Model.LastName" id="LastName" name="LastName" placeholder="Last Name" type="text">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Email<smal class="text-danger">*</smal></label>
                    <input class="form-control" onblur="validEmail(this)" required id="Email" value="@Model.Email" name="Email" placeholder="Email" type="email">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Password<small class="text-danger">*</small></label>
                    <input class="form-control" onblur="validPassword(this)" required id="Password" value="@Model.Password" name="Password" placeholder="Password" type="password">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="saveUser()">
            @(Model.Id.IsNotNullOrEmpty()?"Update":"Save")
        </button>
    </div>
</form>

